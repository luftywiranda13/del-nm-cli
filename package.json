{
  "name": "del-nm-cli",
  "version": "2.2.2",
  "description": "Delete `node_modules` and lockfiles",
  "license": "MIT",
  "repository": "https://github.com/luftywiranda13/del-nm-cli",
  "author": {
    "name": "Lufty Wiranda",
    "email": "lufty.wiranda@gmail.com",
    "url": "https://www.luftywiranda.com"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "precommit": "remove-lockfiles && xo --fix && lint-staged",
    "lint": "xo",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "bin": {
    "del-nm": "cli.js"
  },
  "files": [
    "cli.js"
  ],
  "dependencies": {
    "del-nm": "^4.0.0",
    "listr": "^0.13.0",
    "meow": "^4.0.0",
    "update-notifier": "^2.3.0"
  },
  "devDependencies": {
    "async-to-gen": "^1.3.3",
    "eslint-config-prettier": "^2.9.0",
    "execa": "^0.9.0",
    "fs-extra": "^5.0.0",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "remove-lockfiles": "^2.0.4",
    "tempy": "^0.2.1",
    "xo": "^0.18.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "async-to-gen"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "extends": "prettier",
    "envs": [
      "jest"
    ]
  },
  "keywords": [
    "clean",
    "cleaning",
    "cleanup",
    "cli-app",
    "cli",
    "cross-platform",
    "del",
    "delete",
    "destroy",
    "dir",
    "directory",
    "file",
    "files",
    "filesystem",
    "folder",
    "fs",
    "glob",
    "node_modules",
    "reinstall",
    "remove",
    "rimraf",
    "rm",
    "rmdir",
    "rmrf",
    "trash",
    "unlink"
  ]
}

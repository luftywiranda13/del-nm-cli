{
  "name": "del-nm-cli",
  "version": "2.2.3",
  "description": "Delete `node_modules` and lockfiles",
  "license": "MIT",
  "repository": "https://github.com/luftywiranda13/del-nm-cli",
  "author": {
    "name": "Lufty Wiranda",
    "email": "lufty.wiranda@gmail.com",
    "url": "https://www.luftywiranda.com"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "precommit": "remove-lockfiles && lint-staged",
    "test:watch": "jest --watch",
    "test": "xo && jest"
  },
  "bin": {
    "del-nm": "cli.js"
  },
  "files": [
    "cli.js"
  ],
  "dependencies": {
    "del-nm": "^4.0.0",
    "listr": "^0.13.0",
    "meow": "^4.0.0",
    "update-notifier": "^2.3.0"
  },
  "devDependencies": {
    "async-to-gen": "^1.3.3",
    "execa": "^0.10.0",
    "fs-extra": "^5.0.0",
    "husky": "^4.2.3",
    "jest": "^22.0.6",
    "lint-staged": "^7.0.0",
    "remove-lockfiles": "^2.0.4",
    "tempy": "^0.2.1",
    "xo": "^0.20.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "async-to-gen"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "space": true
  },
  "keywords": [
    "clean",
    "cleaning",
    "cleanup",
    "cli-app",
    "cli",
    "cross-platform",
    "del",
    "delete",
    "destroy",
    "dir",
    "directory",
    "file",
    "files",
    "filesystem",
    "folder",
    "fs",
    "glob",
    "node_modules",
    "reinstall",
    "remove",
    "rimraf",
    "rm",
    "rmdir",
    "rmrf",
    "trash",
    "unlink"
  ]
}
